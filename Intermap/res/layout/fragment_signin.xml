<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.30"
        android:gravity="center"
        android:orientation="vertical" >
    
	    <Button
	        android:id="@+id/btnFacebookSignIn"
	        style="@style/com_facebook_loginview_default_style"
	        android:layout_width="@dimen/com_sgc_mainactivity_button_width"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center_horizontal"
	        android:layout_marginBottom="30dp"
	        android:layout_marginTop="30dp"
	        android:onClick="onClickFacebookSignIn"
	        android:text="@string/com_sgc_facebook_login_button_name" />
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.70"
        android:gravity="center"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/txtEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:layout_marginBottom="@dimen/com_sgc_text_field_bottom_margin" >

            <requestFocus />
        </EditText>

        <EditText
            android:id="@+id/txtPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPassword"
            android:layout_marginBottom="@dimen/com_sgc_text_field_bottom_margin" />

        <Button
            android:id="@+id/btnBasicSignIn"
            android:layout_width="@dimen/com_sgc_mainactivity_button_width"
            android:layout_height="wrap_content"
            android:text="Sign in with Intermap" 
            android:onClick="onClickBasicSignIn"
            android:layout_marginBottom="@dimen/com_sgc_text_field_bottom_margin"/>

	</LinearLayout>    
    <!--
    <com.facebook.widget.LoginButton
            android:id="@+id/login_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp" />
    -->



</LinearLayout>
