<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#303040"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_marginTop="30dp"
        android:layout_weight="0.60"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/splash_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:src="@drawable/ic_launcher" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/com_sgc_app_name"
            android:textColor="#AFDEFE"
            android:textSize="28sp"
            android:textStyle="italic"
            android:typeface="serif" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.4"
        android:gravity="center_horizontal"
        android:orientation="vertical" >
     
    <Button
        android:id="@+id/btnSignIn"
        android:layout_width="@dimen/com_sgc_mainactivity_button_width"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="15dp"
        android:onClick="onClickSignIn"
        android:text="@string/com_sgc_signin_button_name" />
     <Button
        android:id="@+id/btnRegister"
        android:layout_width="@dimen/com_sgc_mainactivity_button_width"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="15dp"
        android:onClick="onClickRegister"
        android:text="@string/com_sgc_register_button_name" />

	</LinearLayout>
</LinearLayout>