<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.40"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/TextView01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:capitalize="characters"
            android:text="Link your account to your Facebook profile." />
	    <Button
	        android:id="@+id/btnFacebookRegister"
	        style="@style/com_facebook_loginview_default_style"
	        android:layout_width="@dimen/com_sgc_mainactivity_button_width"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center_horizontal"
	        android:layout_marginBottom="15dp"
	        android:layout_marginTop="15dp"
	        android:onClick="onClickFacebookLogin"
	        android:text="Register with Facebook" />

	    <TextView
	        android:id="@+id/text_id"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:capitalize="characters"
	        android:gravity="center"
	        android:text="Don&apos;t worry. We will never post to your timeline without your permission." />

    </LinearLayout>
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.70"
        android:gravity="center"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/txtRegisterEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:layout_marginBottom="@dimen/com_sgc_text_field_bottom_margin" >

            <requestFocus />
        </EditText>

        <EditText
            android:id="@+id/txtRegisterPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPassword" 
            android:layout_marginBottom="@dimen/com_sgc_text_field_bottom_margin"/>

        <EditText
            android:id="@+id/txtRegisterPasswordConfirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Confirm Password"
            android:inputType="textPassword" 
            android:layout_marginBottom="@dimen/com_sgc_text_field_bottom_margin"/>

        <Button
            android:id="@+id/btnRegisterNext"
            android:layout_width="@dimen/com_sgc_mainactivity_button_width"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/com_sgc_text_field_bottom_margin"
            android:text="Next" />

	</LinearLayout>    
    <!--
    <com.facebook.widget.LoginButton
            android:id="@+id/login_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp" />
    -->


</LinearLayout>
